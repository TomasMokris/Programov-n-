#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <math.h>

int nepritel(){
    int r = (rand() % 8) + 14;
    return r;
}

int hrac(){
    int r = (rand() % 10) + 1;
    return r;
}

int main()
{
   srand(time(NULL));
   char odpoved;
   int h = 0;
   int n = 0;
   int game = 1;
   
   while (game == 1){
   printf("\n\n //Líznout Kartu Y/y  N/n ?");
   scanf("%c", &odpoved);
   
   if (odpoved == 'y' || odpoved == 'Y'){
    h = h + hrac();

    printf("\n Tvůj součet karet je %i \n\n\n", h);
   }
     if (odpoved == 'n' || odpoved == 'N'){
      game = 2;
     }
     if (h > 21){
     game = 2;
     }
   }
   
      char ans;
  while (game == 2) {
          n = n + nepritel();
      printf("\n Krupiérovo součet karet je %i", n);
      printf("\n Tvůj součet karet je %i", h);
      if (h > n && n<22 && h<22){
          printf("\n\n === Vyhrál jsi GRATULUJI!!! ===");
          game = 3;
      }
      if (h < n && n < 22 && h < 22){
          printf("\n\n === Prohrál jsi Hodně Štěstí Přístě ===");
                  game = 3;

      }
      if (h == n && h > 21 && n > 21){
          printf("\n\n === Remíza! ===");
                    game = 3;

      }
      if (h > 21){ 
         printf("\n\n === Prohrál jsi na Přetáhnutí Karet ===");
                   game = 3;

      }
      if (n > 21){ 
         printf("\n\n === Vyhrál jsi protože Krupiér Přetáhl ===");
                   game = 3;

      }
     }
     
     while (game == 3) {
         printf("\n\n //Zahrát hru znovu ? Y/y ");
   scanf("%c", &ans);
   
   if (ans == 'y' || ans == 'Y'){
       game = 1;
       main();
      }
     if (ans == 'n' || ans == 'N'){
         game = 4;
     }
     }
    }
      
      
